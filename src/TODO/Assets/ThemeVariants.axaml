<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="MenuBarBackgroundColor">#202020</SolidColorBrush>
            <SolidColorBrush x:Key="MenuBarForegroundColor">#FFFFFF</SolidColorBrush>
            <SolidColorBrush x:Key="MenuBarPointerOverBorderColor">#FFFFFF</SolidColorBrush>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="MenuBarBackgroundColor">#f0f0f0</SolidColorBrush>
            <SolidColorBrush x:Key="MenuBarForegroundColor">#000000</SolidColorBrush>
            <SolidColorBrush x:Key="MenuBarPointerOverBorderColor">#000000</SolidColorBrush>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>